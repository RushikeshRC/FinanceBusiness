@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.ContactUs>
@{
    Layout = "Master.cshtml";

    Banner contactBanner = Model.Slides.First();

    
}

@* the fun starts here *@

<!-- Page Content -->
<div class="page-heading header-text" style="background-image:url(@contactBanner.BannerImage.Url())">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@contactBanner.BannerTitle</h1>
                <span>@contactBanner.BannerText</span>
            </div>
        </div>
    </div>
</div>

<div class="contact-information">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="contact-item">
                    <i class="fa fa-phone"></i>
                    <h4>Phone</h4>
                    <p>@Model.PhDescription</p>
                    <a href="#">@Model.PhoneNumbar</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-item">
                    <i class="fa fa-envelope"></i>
                    <h4>Email</h4>
                    <p>@Model.EmailInfo</p>
                    <a href="#">@Model.Email</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-item">
                    <i class="fa fa-map-marker"></i>
                    <h4>@Model.LocationInfo</h4>
                    <p>@Model.LocationInfo</p>
                    <a href="#">@Model.GoogleMap.Url</a>
                </div>
            </div>
        </div>
    </div>
</div>

