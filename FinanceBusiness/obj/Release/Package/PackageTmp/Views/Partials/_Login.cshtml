@inherits Umbraco.Web.Mvc.UmbracoViewPage<FinanceBusiness.ViewModels.LoginModel>

@using Umbraco.Web;

@*<div class="container">
    <div class="form-container padding-top-150">*@
<section class="h-100 gradient-form" style="background-color: #9A616D;">
    <div class="container py-5 py-lg-5 py-sm-3 h-50">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-5">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="form-outline mb-4 row mt-5">
                                    <div class="col d-flex justify-content-center">

                                        <div class="form-content login-form">
                                            @{
                                                if (!Umbraco.MemberIsLoggedOn())
                                                {
                                                    using (Html.BeginUmbracoForm("SubmitLogin", "Register", System.Web.Mvc.FormMethod.Post, new { id = "login" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        @Html.LabelFor(m => m.Username)
                                                        @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })

                                                        @Html.LabelFor(m => m.Password)
                                                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })

                                                        @Html.ValidationSummary()
                                                        <button name="login" class="btn-primary btn-block mb-4" type="submit">Login</button>
                                                    }
                                                }
                                                else
                                                {
                                                    Html.RenderAction("MemberLogout", "Register");
                                                }
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
