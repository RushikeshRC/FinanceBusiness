@inherits Umbraco.Web.Mvc.UmbracoViewPage<FinanceBusiness.Models.RegisterViewModel>

@{ 
    IEnumerable<SelectListItem> roleList = Roles.GetAllRoles()
        .Select(role => new SelectListItem { Text=role, Value=role});
}

<section class="h-150 h-custom" style="background-color: #8fc4b7;">
    <div class="container py-xl-5 py-5 pb-xl-5 h-50">
        <div class="row d-flex justify-content-center align-items-center h-150">
            <div class="col-lg-4 col-xl-4">
                <div class="card rounded-3">
                    @*<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .6rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">*@
                    <div class="card-body border-top-0 p-md-5">
                        <div class="form-content login-form">
                            @{
                                using (Html.BeginUmbracoForm("SubmitRegistration", "Register", System.Web.Mvc.FormMethod.Post, new { id = "register" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Name" })

                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })

                                    @Html.LabelFor(m => m.Password)
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })

                                    @Html.LabelFor(m => m.ConfirmPassword)
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "ConfirmPassword" })

                                    @Html.LabelFor(m => m.Address)
                                    @Html.TextBoxFor(m => m.Address, new { placeholder = "Address" })                     
                                  
                                    @Html.LabelFor(m => m.SelectedRole)
                                    @Html.DropDownListFor(m => m.SelectedRole,roleList) 

                                    @Html.ValidationSummary()
                                    <button name="register" type="submit">Register</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


